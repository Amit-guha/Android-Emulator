<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#fafafa"
    android:orientation="vertical"
   >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="350dp">

        <LinearLayout
            android:background="@drawable/gradient"
            android:layout_width="match_parent"
            android:layout_height="320dp"
            android:orientation="vertical">

            <de.hdodenhof.circleimageview.CircleImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/Circle_contact"
                android:layout_marginTop="45dp"
                android:layout_gravity="center_horizontal"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@drawable/index"
                app:civ_border_width="2dp"
                app:civ_border_color="#FFF"/>

            <TextView
                android:id="@+id/Tv_contactname"
                android:layout_marginTop="10dp"
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Contact Name"
                android:textColor="#fff"
                android:textStyle="bold"
                android:textSize="25sp"/>

        </LinearLayout>
        <android.support.v7.widget.CardView
            android:layout_width="300dp"
            android:layout_height="120dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="275dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:weightSum="2">

                <TextView
                    android:id="@+id/Tv_contDesg"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:text="Designation"
                    android:textSize="18sp"
                    android:textColor="#09c6df"
                    />

                <TextView
                    android:id="@+id/Tv_contDept"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:text="Dept Name"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    />

            </LinearLayout>

        </android.support.v7.widget.CardView>
    </RelativeLayout>

    <LinearLayout
        android:layout_marginTop="30dp"
        android:layout_gravity="center"
        android:layout_width="360dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp">

            <TextView
                android:id="@+id/Tv_conactFirstnum"
                android:layout_gravity="center_vertical"
                android:textSize="15sp"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="01734229096"/>

            <ImageView
                android:id="@+id/Img_call"
                android:layout_marginLeft="90dp"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:src="@drawable/callid"/>

            <ImageView
                android:layout_gravity="center_vertical"
                android:id="@+id/Img_msg"
                android:layout_marginLeft="20dp"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:src="@drawable/mesageid"/>

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="12dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp">

            <TextView
                android:id="@+id/Tv_gmail"
                android:textSize="15sp"
                android:textStyle="bold"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="computer@gmail.com"/>

            <ImageView
                android:id="@+id/Img_gmail"
                android:layout_marginLeft="39dp"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:src="@drawable/emailid"/>

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="12dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp">

            <TextView
                android:id="@+id/Tv_contactSecond"
                android:textSize="15sp"
                android:textStyle="bold"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="01734229096"/>

            <ImageView
                android:id="@+id/Img_callerSecond"
                android:layout_marginLeft="90dp"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:src="@drawable/callid"/>

            <ImageView
                android:id="@+id/Img_msgsecond"
                android:layout_marginLeft="20dp"
                android:layout_gravity="center_vertical"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:src="@drawable/mesageid"/>

        </LinearLayout>

    </LinearLayout>


</LinearLayout>
